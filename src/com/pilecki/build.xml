<?xml version="1.0" encoding="UTF-8"?>

<project name="Zwierzaki">
<target name="compile">
<mkdir dir="bin"/>
<javac srcdir="src" destdir="bin"/>
</target>

<target name="jar">
<mkdir dir="bin/jar"/>
<jar destfile="bin/jar/Zwierzaki.jar" basedir="bin">
<manifest>
<attribute name="Main-Class" value="Main"/>
</manifest>
</jar>
</target>

<target name="run-jar" depends="jar">
<java jar="bin/jar/Zwierzaki.jar" fork="true"/>
</target>

<target name="clean">

</target>

</project>